    <script>
      (function() {
        const wrapper = document.getElementById('page-wrapper');
        const btnIn = document.getElementById('zoom-in');
        const btnOut = document.getElementById('zoom-out');
        const btnReset = document.getElementById('zoom-reset');
        const btnContrast = document.getElementById('contrast');
        let scale = 1;

        function setScale(s) {
          scale = Math.min(1.6, Math.max(0.7, Math.round(s * 100) / 100));
          wrapper.style.setProperty('--scale', scale);
          btnReset.textContent = Math.round(scale * 100) + '%';
        }
        btnIn.onclick = () => setScale(scale + 0.1);
        btnOut.onclick = () => setScale(scale - 0.1);
        btnReset.onclick = () => setScale(1);
        btnContrast.onclick = () => {
          const isOn = document.body.classList.toggle('high-contrast');
          btnContrast.setAttribute('aria-pressed', isOn);
        }
      })();
    </script>



